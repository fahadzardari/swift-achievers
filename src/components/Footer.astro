---
import Logo from "../assets/logo.svg";
import Image from "astro/components/Image.astro";
const services = [
  "Amazon Store Creation",
  "Amazon Product Hunting",
  "EBC/A+ Content",
  "Virtual Assistant",
  "Amazon PPC",
];
const pages = [
  "Home",
  "Amazon FBA Automation",
  "Shopify Dropshipping",
  "About",
  "Contact Us",
];
const contactInfo = {
  email: "query@amzinventor.com",
  phone: "+1 (123) 456-7890",
  address: "236 W Monroe St Chicago, IL 60607",
};
---

<footer class="app-margin w-screen bg-[#0E0128] text-white">
  <div class="container">
    <div
      class="mx-auto grid grid-cols-2 gap-x-1 gap-y-12 py-10 md:grid-cols-4 md:gap-x-4 lg:w-[95%] 2xl:w-[90%]"
    >
      <div class="col-span-2 flex flex-col gap-y-7 md:col-span-1">
        <Image
          src={Logo}
          alt="Swift Achievers Logo"
          class="mx-auto w-1/2 md:mx-0 md:w-2/3"
        />
        <p class="3xl:text-base text-[10px] md:text-xs xl:text-sm">
          Leading Amazon outsourcing company Swift Achievers offers mid-sized
          and large-scale brands solid and well-considered e-commerce solutions.
        </p>
      </div>
      <div class="flex flex-col gap-y-7">
        <h1 class="3xl:text-lg text-xs font-semibold md:text-sm xl:text-base">
          Services
        </h1>
        <ul class="flex flex-col gap-y-4">
          {
            services.map((service) => (
              <li class="3xl:text-base cursor-pointer text-[10px] text-white md:text-xs xl:text-sm">
                {service}
              </li>
            ))
          }
        </ul>
      </div>
      <div class="flex flex-col gap-y-7">
        <h1 class="3xl:text-lg text-xs font-semibold md:text-sm xl:text-base">
          Pages
        </h1>
        <ul class="flex flex-col gap-y-4">
          {
            pages.map((page) => (
              <li class="3xl:text-base cursor-pointer text-[10px] text-white md:text-xs xl:text-sm">
                {page}
              </li>
            ))
          }
        </ul>
      </div>
      <div class="flex flex-col gap-y-7">
        <h1 class="3xl:text-lg text-xs font-semibold md:text-sm xl:text-base">
          Contact Us
        </h1>
        <ul class="flex flex-col gap-y-4">
          <a
            href={`tel:${contactInfo.phone}`}
            class="3xl:text-base cursor-pointer text-[10px] text-white md:text-xs xl:text-sm"
          >
            {contactInfo.phone}
          </a>
          <a
            href={`mailto:${contactInfo.email}`}
            class="3xl:text-base cursor-pointer text-[10px] text-white md:text-xs xl:text-sm"
          >
            {contactInfo.email}
          </a>
          <li
            class="3xl:text-base cursor-pointer text-[10px] text-white md:text-xs xl:text-sm"
          >
            {contactInfo.address}
          </li>
        </ul>
      </div>
    </div>
    <section
      class="3xl:text-base flex items-center justify-between border-t border-t-white py-7 text-[10px] md:text-xs lg:text-sm"
    >
      <p class="">All Rights Reserved 2025 - Swift Achievers</p>
      <section class="flex divide-x">
        <a href="" class="px-2 lg:px-4">
          <p class="cursor-pointer text-white">Privacy Policy</p>
        </a>
        <a href="" class="px-2 lg:px-4">
          <p class="cursor-pointer text-white">Terms of Service</p>
        </a>
      </section>
    </section>
  </div>
</footer>
